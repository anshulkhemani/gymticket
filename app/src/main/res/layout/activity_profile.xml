<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/profile_image"
        android:src="@drawable/ic_launcher_background"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="161dp"
        android:layout_marginLeft="161dp"
        android:layout_marginTop="10dp"
        android:text="Rahul Sharma" />

    <TextView
        android:id="@+id/profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_name"
        android:layout_alignStart="@+id/profile_name"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="rahul.sharma@gmail.com" />

    <TextView
        android:id="@+id/profile_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_email"
        android:layout_alignStart="@+id/profile_name"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-1dp"
        android:text="Ahmedabad" />

    <View
        android:layout_width="match_parent"
        android:layout_below="@id/profile_image"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/profile_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="117dp"
        android:text="My Profile" />

    <ImageView
        android:id="@+id/history_ic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_below="@id/profile_profile"
        android:src="@mipmap/gymticket_history_ic" />

    <TextView
        android:id="@+id/profile_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_profile"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:text="GymTicket History                                                  >>" />

    <View
        android:layout_width="match_parent"
        android:layout_below="@id/profile_history"
        android:layout_height="1dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"/>

    <ImageView
        android:id="@+id/mealLog_ic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="9dp"
        android:layout_marginStart="15dp"
        android:layout_below="@id/history_ic"
        android:src="@mipmap/nutrition_log_ic" />

    <TextView
        android:id="@+id/profile_mealLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_history"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:text="Meal Log                                                                   >>"/>

    <View
        android:layout_width="match_parent"
        android:layout_below="@id/profile_mealLog"
        android:layout_height="1dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"/>

    <ImageView
        android:id="@+id/orders_ic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="9dp"
        android:layout_marginStart="15dp"
        android:layout_below="@id/mealLog_ic"
        android:src="@mipmap/my_order_ic" />

    <TextView
        android:id="@+id/profile_orders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_mealLog"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:text="My Orders                                                                 >>" />

    <View
        android:layout_width="match_parent"
        android:layout_below="@id/profile_orders"
        android:layout_height="1dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"/>

    <ImageView
        android:id="@+id/edit_ic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="9dp"
        android:layout_marginStart="15dp"
        android:layout_below="@id/orders_ic"
        android:src="@mipmap/edit_profile" />

    <TextView
        android:id="@+id/profile_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/profile_orders"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:text="Edit Profile                                                                >>" />

    <View
        android:layout_width="match_parent"
        android:layout_below="@id/profile_edit"
        android:layout_height="1dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:id="@+id/profile_others"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/profile_edit"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:text="Others" />


    <ImageView
        android:id="@+id/offers_ic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="13dp"
        android:layout_marginStart="15dp"
        android:layout_below="@id/profile_others"
        android:src="@mipmap/offers_ic" />

    <TextView
        android:id="@+id/profile_offers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_others"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:text="Special Offers                                                          >>" />

    <View
        android:layout_width="match_parent"
        android:layout_below="@id/profile_offers"
        android:layout_height="1dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"/>

    <ImageView
        android:id="@+id/about_ic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="11dp"
        android:layout_marginStart="15dp"
        android:layout_below="@id/offers_ic"
        android:src="@mipmap/about_ic" />

    <TextView
        android:id="@+id/profile_about"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_offers"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:text="About                                                                         >>" />

    <View
        android:layout_width="match_parent"
        android:layout_below="@id/profile_about"
        android:layout_height="1dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"/>

    <ImageView
        android:contentDescription="help"
        android:id="@+id/help_ic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_below="@id/about_ic"
        android:src="@mipmap/help_ic" />

    <TextView
        android:id="@+id/profile_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_about"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:text="Help                                                                            >>" />


    <View
        android:layout_width="match_parent"
        android:layout_below="@id/profile_help"
        android:layout_height="1dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/darker_gray"/>

    <ImageView
        android:contentDescription="help"
        android:id="@+id/logout_ic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:layout_below="@id/help_ic"
        android:src="@mipmap/log_out_ic" />

    <TextView
        android:id="@+id/profile_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_help"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:text="Logout                                                                        >>" />

</RelativeLayout>