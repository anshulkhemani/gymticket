<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:id="@+id/GymIconCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            android:layout_margin="5dp"
            android:elevation="10dp">

            <ImageView
                android:id="@+id/GymIcon"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_launcher_background"
                android:scaleType="centerCrop"
                />
        </android.support.v7.widget.CardView>
        <TextView
            android:id="@+id/custom_refresh_recycler_view_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/GymIconCard"
            android:gravity="center"
            android:text="The Gym City"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/GymIconCard"
            android:layout_below="@+id/custom_refresh_recycler_view_text_view"
            android:gravity="center"
            android:text="Nana chiloda"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/locIcon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"
            android:layout_toLeftOf="@+id/distance"
            android:layout_marginRight="4dp"
            android:layout_below="@+id/custom_refresh_recycler_view_text_view"
            />

        <TextView
            android:id="@+id/distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/custom_refresh_recycler_view_text_view"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="0.33 KM"
            android:textSize="10dp" />
        <TextView
            android:id="@+id/rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address"
            android:background="#00b000"
            android:padding="3dp"
            android:layout_toRightOf="@+id/GymIconCard"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="5.0"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/ratingText"
            android:padding="3dp"
            android:layout_width="wrap_content"
            android:background="#00f300"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address"
            android:layout_toRightOf="@+id/rating"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="Excellent"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/noOfRatings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address"
            android:layout_toRightOf="@+id/ratingText"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="6dp"
            android:gravity="center"
            android:text="10 Ratings >"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/clockIcon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"
            android:layout_margin="10dp"
            android:layout_below="@+id/rating"
            android:layout_toRightOf="@id/GymIconCard"
            />
        <TextView
            android:id="@+id/timings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/clockIcon"
            android:layout_below="@+id/rating"
            android:layout_marginTop="9dp"
            android:gravity="center"
            android:text="06:00-21:00"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/type1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/GymIconCard"
            android:layout_margin="15dp"
            android:gravity="center"
            android:text="Workout"
            android:textSize="17sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/type2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/GymIconCard"
            android:layout_toRightOf="@+id/type1"
            android:layout_margin="15dp"
            android:gravity="center"
            android:text="Aerobics"
            android:textSize="17sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/type3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/GymIconCard"
            android:layout_toRightOf="@+id/type2"
            android:layout_margin="15dp"
            android:gravity="center"
            android:text="Zumba"
            android:textSize="17sp"
            android:textStyle="bold"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>