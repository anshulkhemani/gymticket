<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250dp"
    android:layout_height="120dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="10dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/GymIconCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:layout_margin="5dp"
        android:elevation="10dp">

        <ImageView
            android:id="@+id/GymIcon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"
            />
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/custom_refresh_recycler_view_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/GymIconCard"
        android:gravity="center"
        android:text="The Gym City"
        android:textSize="13dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/GymIconCard"
        android:layout_below="@+id/custom_refresh_recycler_view_text_view"
        android:gravity="center"
        android:text="Nana chiloda"
        android:textSize="11dp" />

    <ImageView
        android:id="@+id/locIcon"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="centerCrop"
        android:layout_toLeftOf="@+id/distance"
        android:layout_marginRight="4dp"
        android:layout_below="@+id/custom_refresh_recycler_view_text_view"
        />
    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_refresh_recycler_view_text_view"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="0.33 KM"
        android:textSize="10dp" />
    <TextView
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:background="#00b000"
        android:padding="3dp"
        android:layout_toRightOf="@+id/GymIconCard"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="5.0"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/ratingText"
        android:padding="3dp"
        android:layout_width="wrap_content"
        android:background="#00f300"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:layout_toRightOf="@+id/rating"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Excellent"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/noOfRatings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/address"
        android:layout_toRightOf="@+id/ratingText"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="6dp"
        android:gravity="center"
        android:text="10 Ratings >"
        android:textSize="10dp" />

    <ImageView
        android:id="@+id/clockIcon"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:src="@drawable/ic_launcher_background"
        android:scaleType="centerCrop"
        android:layout_margin="10dp"
        android:layout_below="@+id/rating"
        android:layout_toRightOf="@id/GymIconCard"
        />
    <TextView
        android:id="@+id/timings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/clockIcon"
        android:layout_below="@+id/rating"
        android:layout_marginTop="9dp"
        android:gravity="center"
        android:text="06:00-21:00"
        android:textSize="11dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/type1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GymIconCard"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="Workout"
        android:textSize="13sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/type2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GymIconCard"
        android:layout_toRightOf="@+id/type1"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="Aerobics"
        android:textSize="13sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/type3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GymIconCard"
        android:layout_toRightOf="@+id/type2"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="Zumba"
        android:textSize="13sp"
        android:textStyle="bold"/>
</RelativeLayout>
</android.support.v7.widget.CardView>